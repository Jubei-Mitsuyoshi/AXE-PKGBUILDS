# Maintainer: Jubei-Mitsuyoshi <jubei.house.of.five.masters@gmail.com>
# Maintainer: Ivailo Monev <xakepa10@gmail.com>
pkgname='upower'
pkgdesc="Abstraction for enumerating power devices, listening to device events and querying history and statistics, --maintained as part of the axe project"
pkgver=0.9.18
_arch_rel=3
_axe_rel=2
_axe_proc="xx"
_axe_bin=1
pkgrel=999.${_axe_bin}.${_arch_rel}.${_axe_rel}.${_axe_proc}.axe
arch=('i686' 'x86_64')
url="http://upower.freedesktop.org"
license=('GPL')
groups=('axis')
depends=('udev' 'libusb' 'pm-utils' 'dbus-glib' 'libimobiledevice')
makedepends=('intltool' 'docbook-xsl' 'gobject-introspection' 'polkit-axe')
options=('!libtool')
source=("$url/releases/$pkgname-$pkgver.tar.xz")
md5sums=('bfaaa1e7f8479fca5594406b3c36dff9')

build() {
  cd "$pkgname-$pkgver"

  # put udev files in /usr/lib
  sed -i "/slashlibdir=/s#/lib#/usr/lib#" configure


  ./configure --prefix=/usr --sysconfdir=/etc \
    --localstatedir=/var \
    --libexecdir=/usr/lib/$pkgname \
    --disable-static
  make
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
