# Maintainer: Jubei-Mitsuyoshi <jubei.house.of.five.masters@gmail.com>
#axe-------------------- no changes here due to dowload fail, just changed sources todebian
pkgname=orc
pkgver=0.4.16
_arch_rel=2
_axe_rel=2

pkgrel="${_AXE_EXPORTED_PREFIX_REL}.${_AXE_EXPORTED_STAGE}.${_arch_rel}.${_axe_rel}.${_AXE_EXPORTED_PROCESSOR_TYPE}.${_AXE_EXPORTED_SUFFIX_REL}"
pkgdesc="The Oild Runtime Compiler"
arch=('i686' 'x86_64')
license=('custom')
groups=('axis')
url="http://code.entropywave.com/projects/orc/"
depends=('glibc')
options=('!libtool')
source=(http://ftp.de.debian.org/debian/pool/main/o/orc/orc_$pkgver.orig.tar.gz)
md5sums=('E482932E544C847761449B106ECBC483')

build () {
    cd "$srcdir/$pkgname-$pkgver"
    ./configure --prefix=/usr --disable-static
    make
}

package() {
    cd "$srcdir/$pkgname-$pkgver"
    make DESTDIR="$pkgdir" install
    install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}
