post_install() {
  usr/bin/glib-compile-schemas --targetdir=/usr/share/glib-2.0/schemas /usr/share/glib-2.0/schemas > /dev/null
  update-desktop-database -q
}

post_upgrade() {
  post_install $1
}

post_remove() {
  usr/bin/glib-compile-schemas --targetdir=/usr/share/glib-2.0/schemas /usr/share/glib-2.0/schemas > /dev/null
  update-desktop-database -q
}

